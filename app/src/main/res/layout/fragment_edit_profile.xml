<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
>
<!--    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:layout_below="@id/toolbar"
        android:layout_weight="1"
        android:fillViewport="true">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/rl_boy"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="100dp">
                        <ImageView
                            android:id="@+id/iv_personimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/boy"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_alignBottom="@+id/card_img"
                        android:layout_alignEnd="@+id/card_img"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/iv_edit_boy"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            android:background="@color/primaryColor"
                            android:src="@drawable/outline_edit_24"
                            app:tint="@color/white"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_girl"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:layout_gravity="center">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_img_girl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="100dp">
                        <ImageView
                            android:id="@+id/iv_girl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/girl"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_alignBottom="@+id/card_img_girl"
                        android:layout_alignEnd="@+id/card_img_girl"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/iv_edit_girl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            android:background="@color/primaryColor"
                            android:src="@drawable/outline_edit_24"
                            app:tint="@color/white"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                app:boxBackgroundMode="filled">
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingBottom="5dp"
                    android:background="@color/white"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Mobile Number"
                app:boxBackgroundMode="filled">
                <EditText
                    android:id="@+id/et_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:inputType="phone"
                    android:paddingStart="0dp"
                    android:paddingBottom="5dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
<!--    </ScrollView>-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bar_bg"
        app:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:text="Save"
        android:backgroundTint="@color/primaryColor"/>

</RelativeLayout>